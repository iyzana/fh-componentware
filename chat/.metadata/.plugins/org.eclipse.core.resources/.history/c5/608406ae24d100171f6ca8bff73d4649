package de.fhdortmund.jk.chat.beans.interfaces;

import de.fhdortmund.jk.chat.beans.exception.UserNotFoundException;

public interface UserSession {
	public String getUserName();

	public void login(String username, String pw) throws UserNotFoundException;

	public void changePassword(String oldPw, String newPw);

	public void logout();

	public void disconnect();

	public void delete(String pw);
}
